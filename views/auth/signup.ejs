<% layout('layout/boilerplate') -%>

<div class="row">
  <div class="col-md-6 mx-auto">
    <%- include('../partials/flash') %>
    <h1 class="display-6">Sign Up</h1>
    <form action="/register" method="post">
      <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input class="form-control" type="text" name="username" id="username" placeholder="Username" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="email" name="email" id="email" placeholder="Email" />
      </div>

      <p>Want to register as:</p>
      <div class="mx-2">
        <label for="seller">Seller </label>
        <input class="form-check-input mt-0" type="radio" name="role" value="Seller" id="seller" />
      </div>

      <div class="mx-2">
        <label for="buyer">Buyer </label>
        <input class="form-check-input mt-1 mb-3" type="radio" name="role" value="Buyer" id="buyer" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" name="password" id="password" placeholder="Password" />
      </div>
      <button type="submit" class="btn btn-success btn-small">SignUp</button>
    </form>
  </div>
</div>
