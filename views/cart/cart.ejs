<% layout('layout/boilerplate') -%>
<section class="container">
  <span>
    <h1 class="cart">My Cart</h1>
  </span>

  <div class="row">
    <div class="col-lg-8">
      <% for(let item of user.cart){%>
      <div class="card mx-auto mb-3" style="max-width: 540px">
        <div class="row g-0">
          <div class="col-4">
            <img src="<%=item.img%>" class="img-fluid rounded-start" alt="..." />
          </div>
          <div class="col-8">
            <div class="card-body">
              <h5 class="card-title"><%=item.name%></h5>
              <p class="card-text"><%=item.desc.substring(0,100)%></p>
              <form class="d-inline-block" action="/cart/<%=item.id%>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <%} %>
    </div>
    <div class="col-lg-4">
      <ul class="list-group">
        <% for(let item of user.cart) {%>
        <li class="list-group-item"><span class="fw-bold"><%=item.name%> - </span>$ <%=item.price%> <span></span></li>
        <% } %>
        <li class="list-group-item fw-bold">Total Amount : $ <%=totalAmount%></li>
      </ul>
      <form action="/payment_gateway/payumoney" method="POST">
        <input type="hidden" name="amount" value="<%=totalAmount%>" />
        <input type="hidden" name="phone" value="+91  7900 3526 13 " />
        <input type="hidden" name="service_provider" value="payu_paisa" />
        <input type="hidden" class="product" name="productinfo" value="<%=productInfo%> " />
        <button type="submit" class="btn btn-sm btn-success my-3">Checkout</button>
      </form>
    </div>
  </div>
</section>
